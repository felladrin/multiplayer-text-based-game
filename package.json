{
  "name": "multiplayer-text-based-game",
  "version": "0.1.0",
  "description": "Just another multiplayer text-based game.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felladrin/multiplayer-text-based-game"
  },
  "scripts": {
    "start": "run-s parcel-build ts-node",
    "dev": "run-p parcel-watch ts-node-dev",
    "parcel-watch": "parcel watch src/client/index.html",
    "parcel-build": "parcel build src/client/index.html --no-source-maps",
    "ts-node": "ts-node src/server/index.ts",
    "ts-node-dev": "ts-node-dev src/server/index.ts"
  },
  "dependencies": {
    "express": "^4.17.1",
    "golden-layout": "^1.5.9",
    "jquery": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "require-all": "^3.0.0",
    "socket.io": "^2.2.0",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jquery": "^3.3.30",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "sass": "^1.22.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
