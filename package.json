{
  "name": "multiplayer-text-based-game",
  "version": "0.1.0",
  "description": "Just another multiplayer text-based game.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felladrin/multiplayer-text-based-game"
  },
  "scripts": {
    "start": "run-s clean-build-dir parcel-build compile-and-run",
    "dev": "run-p parcel-watch ts-node-dev",
    "parcel-watch": "parcel watch src/client/index.html -d build/client",
    "parcel-build": "parcel build src/client/index.html -d build/client --no-source-maps",
    "compile-and-run": "(cd src/server && tsc) && (cd build/server && node .)",
    "ts-node-dev": "ts-node-dev src/server/index.ts",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "clean-build-dir": "rimraf build",
    "update-dependencies": "ncu -u && npm install"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "express": "^4.17.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "require-all": "^3.0.0",
    "rimraf": "^3.0.2",
    "socket.io": "^4.0.2",
    "socket.io-client": "^4.0.2",
    "textarea-autogrow": "^1.0.0",
    "ts-key-enum": "^2.0.7",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "npm-check-updates": "^11.5.10",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "sass": "^1.32.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
