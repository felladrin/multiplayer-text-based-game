{
  "name": "multiplayer-text-based-game",
  "version": "0.1.0",
  "description": "Just another multiplayer text-based game.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felladrin/multiplayer-text-based-game"
  },
  "scripts": {
    "start": "run-s clean-build-dir parcel-build compile-and-run",
    "dev": "run-p parcel-watch ts-node-dev",
    "parcel-watch": "parcel watch src/client/index.html -d build/client",
    "parcel-build": "parcel build src/client/index.html -d build/client --no-source-maps",
    "compile-and-run": "(cd src/server && tsc) && (cd build/server && node .)",
    "ts-node-dev": "ts-node-dev --project src/server/tsconfig.json src/server/index.ts",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "clean-build-dir": "rimraf build"
  },
  "dependencies": {
    "change-case": "^4.1.0",
    "express": "^4.17.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "require-all": "^3.0.0",
    "rimraf": "^3.0.0",
    "socket.io": "^2.3.0",
    "textarea-autogrow": "^1.0.0",
    "ts-key-enum": "^2.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "sass": "^1.23.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
